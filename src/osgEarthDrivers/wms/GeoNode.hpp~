#ifndef GEONODE_CLASS_H
#define GEONODE_CLASS_H

#include <osg/Node>
#include <osgEarth/GeoData>

class GeoNode{
	public:
		GeoNode(osgEarth::GeoExtent bounds, osg::ref_ptr<osg::Node> node, bool inGraph);

		~GeoNode();

	protected:
		osgEarth::GeoExtent _bounds; 
		osg::ref_ptr<osg::Node> _node; 
		bool _inGraph;
};

#endif
